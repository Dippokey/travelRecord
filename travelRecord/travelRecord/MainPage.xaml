<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="travelRecord.MainPage">
    <StackLayout VerticalOptions="Center">
        <Entry Placeholder="Email"
               Keyboard="Email"/>
        <Entry Placeholder="Password"
               IsPassword="True"/>
        <Button x:Name="loginButton"
                Text="Log In"
                Clicked="loginButton_Clicked"
                />


    </StackLayout>
</ContentPage>