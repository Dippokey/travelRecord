<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="travelRecord.App">


    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="LogInColor">#ff5A60</Color>
            <Color x:Key="LogInTextColor">#FFFFFF</Color>

            <Style x:Key="SimpleButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource LogInColor}"/>
                <Setter Property="TextColor" Value="{StaticResource LogInTextColor}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>


</Application>